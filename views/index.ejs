<html>

<%- include('partials/head', {
  pageTitle: 'MTG Deck Shuffler',
  additionalFonts: ['Risque'],
  script: '/home-v3-parallax.js'
}) %>

<body>
  <div class="home-page">
    <%- include('partials/header') %>

    <section class="hero">
      <h1 class="hero-title">MTG</h1>
      <p class="hero-subtitle">Deck Shuffler</p>
    </section>

    <section class="slogan">
      <p>Play any deck, anywhere, with your favorite people!</p>
    </section>

    <section class="step step-1">
      <h2 class="step-action">Choose</h2>
      <p class="step-object">any deck</p>
      <p class="step-description">Play any Commander precon.<br />Play anyone's deck from Archidekt.</p>
      <a href="/choose-any-deck" class="begin-button button-1">BEGIN</a>
    </section>

    <div class="divider"></div>

    <section class="step step-2">
      <h2 class="step-action">Prepare</h2>
      <p class="step-object">the table</p>
      <p class="step-description">One board in Miro or Mural becomes your shared tabletop.</p>
    </section>

    <div class="divider"></div>

    <section class="step step-3">
      <h2 class="step-action">Enter</h2>
      <p class="step-object">the chat</p>
      <p class="step-description">The game really happens in Discord.</p>
    </section>

    <div class="button-wrapper">
      <a href="/choose-any-deck" class="begin-button button-2">BEGIN</a>
    </div>

    <%- include('partials/footer') %>
  </div>
</body>

</html>
