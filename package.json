{
  "name": "mtg-deck-shuffler",
  "version": "1.0.0",
  "description": "Simple MTG deck app for remote play",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "start": "npm run build && node -r ./dist/tracing.js dist/server.js",
    "test": "node --test --loader ts-node/esm --import ./src/tracing.ts test/**/*.test.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@types/sqlite3": "^3.1.11",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "esbuild": "^0.25.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
